<%= render 'layouts/adminNav' %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-body">
          <% if @product.image.attached? %>
            <div class="text-center">
              <%= image_tag(@product.image, class: 'img-fluid rounded', style: 'max-height:300px;') %>
            </div>
          <% else %>
            <p class="text-center font-weight-bold">No Image Available</p>
          <% end %>

          <h1 class="card-title mt-3 text-center"><%= @product.name %></h1>

          <p class="card-text">
            <strong>Category:</strong>
            <%= @product.category.name %>
          </p>

          <p class="card-text">
            <strong>Description:</strong>
            <%= @product.description %>
          </p>

          <p class="card-text">
            <strong>Price:</strong>
            <%= number_to_currency(@product.price) %>
          </p>

          <p class="card-text">
            <strong>Ingredients:</strong>
            <%= @product.ingredients %>
          </p>
          
          <p class="card-text">
          <strong>On Sale:</strong>
          <%= @product.on_sale %>
        </p>
          <div class="text-center mt-4">
            <%= link_to 'Edit', edit_admin_product_path(@product), class: 'btn btn-primary mr-2' %>
            <%= link_to 'Back to List', admin_products_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
