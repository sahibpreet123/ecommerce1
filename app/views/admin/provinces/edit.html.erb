<%= form_with(model: [:admin, @province], local: true) do |form| %>
    <div>
      <%= form.label :gst, "GST Rate (%)" %>
      <%= form.number_field :gst, step: 0.01 %>
    </div>
  
    <div>
      <%= form.label :pst, "PST Rate (%)" %>
      <%= form.number_field :pst, step: 0.01 %>
    </div>
  
    <div>
      <%= form.label :hst, "HST Rate (%)" %>
      <%= form.number_field :hst, step: 0.01 %>
    </div>
  
    <%= form.submit "Update Tax Rates" %>
  <% end %>