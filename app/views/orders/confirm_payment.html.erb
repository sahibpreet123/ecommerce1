<%= render 'layouts/clientNav' %>

<div class="container mt-5">
  <h1>Thank You for Your Order!</h1>
  <p>Your payment has been successfully processed and your order is on its way.</p>

  <div class="order-details">
    <h2>Order Summary:</h2>
    <p><strong>Order Number:</strong> <%= @order.id %></p>
    <p><strong>Total Amount:</strong> <%= number_to_currency(@order.total) %></p>

    <h3>Items Ordered:</h3>
    
    <ul>
      <% @order.order_items.each do |item| %>
        <li><%= item.quantity %> x <%= item.product.name %> at <%= number_to_currency(item.price) %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <p>If you have any questions about your order, please contact us.</p>
  </div>


</div>
