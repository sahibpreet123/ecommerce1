<%= render 'layouts/clientNav' %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card mb-4 shadow-sm">
        <div class="row g-0">
          <div class="col-md-6">
            <% if @product.image.attached? %>
              <%= image_tag(@product.image, class: 'img-fluid rounded-start') %>
            <% else %>
              <img src="https://via.placeholder.com/500x300" class="img-fluid rounded-start" alt="Product Image">
            <% end %>
          </div>
          <div class="col-md-6">
  <div class="card-body">
    <div class="card-header bg-light">
      <h1 class="display-4"><%= @product.name %></h1>
      <p> <%= @product.category.name if @product.category.present? %></p>
    </div>
    <div class="p-3">
      <p class="lead"><%= @product.description %></p>
      
      <p> <%= @product.ingredients %></p>
      <p class="h4"> <%= number_to_currency(@product.price) %></p>
    </div>

    <%= form_with url: add_to_cart_path(id: @product.id), method: :post, class: 'mt-4' do |form| %>
      <div class="form-group row">
        <%= form.label :quantity, 'Quantity', class: 'col-sm-4 col-form-label' %>
        <div class="col-sm-3">
          <%= form.number_field :quantity, value: 1, min: 1, class: 'form-control', required: true %>
        </div>
      </div>
      <%= form.submit 'Add to Cart', class: ' btn-custom-primary' %>
      <%= link_to 'Back to products', root_path, class: ' btn-custom-secondary' %>
    <% end %>

  
  </div>
</div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
