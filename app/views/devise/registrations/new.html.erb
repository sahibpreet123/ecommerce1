<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card ">
        <div class="card-header text-black text-center">
          <h3>Sign Up</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: "" }) do |f| %>
            <!-- User Email Field -->
            <div class="form-group">
              <%= f.label :email, "Email *" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email", required: true %>
            </div>
            

            <!-- Password Fields -->
            <div class="form-group">
              <%= f.label :password, "Password *" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password", required: true %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm Password *" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password", required: true %>
            </div>

            <!-- Nested Fields for Customer -->
            <%= f.fields_for :customer do |customer_fields| %>
              <div class="form-group">
                <%= customer_fields.label :name, "Full Name *" %>
                <%= customer_fields.text_field :name, class: "form-control", placeholder: "Full Name", required: true %>
              </div>
              <div class="form-group">
                <%= customer_fields.label :address, "Address" %>
                <%= customer_fields.text_field :address, class: "form-control", placeholder: "Address" %>
              </div>

              <%= customer_fields.label :province_id, class: 'form-label' %>
             <%= customer_fields.select :province_id, @provinces, {}, { class: 'form-control', prompt: 'Select Province' } %>

            <% end %>

            <div class="actions text-center">
              <%= f.submit "Sign up", class: "btn-custom-primary" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= link_to 'Already have an account? Log in', new_session_path(resource_name) %>
        </div>
      </div>
    </div>
  </div>
</div>
